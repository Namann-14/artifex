{
  "name": "artifex-backend",
  "version": "1.0.0",
  "description": "Backend API server for Artifex application",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js --exec \"ts-node -r tsconfig-paths/register src/server.ts\"",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "start:dev": "ts-node -r tsconfig-paths/register src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "seed": "ts-node -r tsconfig-paths/register src/scripts/seed.ts seed",
    "seed:cleanup": "ts-node -r tsconfig-paths/register src/scripts/seed.ts cleanup",
    "seed:reset": "ts-node -r tsconfig-paths/register src/scripts/seed.ts reset"
  },
  "keywords": [
    "express",
    "typescript",
    "mongodb",
    "api",
    "backend"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clerk/express": "^1.7.31",
    "@clerk/types": "^4.25.1",
    "@google/generative-ai": "^0.15.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-schedule": "^2.1.1",
    "sharp": "^0.33.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/node-schedule": "^2.1.8",
    "@types/sharp": "^0.32.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
