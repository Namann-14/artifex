# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/artifex

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Google Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MAX_OUTPUT_TOKENS=8192
GEMINI_TEMPERATURE=0.9

# Image Generation Configuration
IMAGE_UPLOAD_MAX_SIZE=10485760
IMAGE_UPLOAD_MAX_FILES=5
IMAGE_TEMP_DIR=./temp/uploads
IMAGE_STORAGE_DIR=./storage/images
IMAGE_CLEANUP_INTERVAL=3600000

# Quota and Subscription Limits
FREE_TIER_MONTHLY_LIMIT=10
PLUS_TIER_MONTHLY_LIMIT=100
PRO_TIER_MONTHLY_LIMIT=1000

# OpenAI Configuration (legacy)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Authentication - Clerk
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key-here
CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key-here
CLERK_WEBHOOK_SECRET=whsec_your-clerk-webhook-secret-here

# Clerk Subscription Configuration
CLERK_SUBSCRIPTION_WEBHOOK_ENDPOINT_SECRET=your_clerk_subscription_webhook_secret
CLERK_API_URL=https://api.clerk.com/v1
CLERK_API_VERSION=v1

# JWT Configuration (if needed for additional auth)
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Session Configuration
SESSION_SECRET=your-session-secret-here

# Quota Configuration
QUOTA_RESET_SCHEDULE=0 0 1 * *
QUOTA_RESET_TIMEZONE=America/New_York

# Subscription Configuration
SUBSCRIPTION_PLANS_CACHE_TTL=3600000
SUBSCRIPTION_WEBHOOK_RETRY_ATTEMPTS=3
SUBSCRIPTION_WEBHOOK_RETRY_DELAY=5000

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_BATCH_SIZE=1000

# Image Generation Configuration
IMAGE_GENERATION_BASE_COST=1
IMAGE_GENERATION_HD_MULTIPLIER=1.5
IMAGE_GENERATION_BATCH_MULTIPLIER=0.9

# Notification Configuration
NOTIFICATION_EMAIL_FROM=noreply@yourapp.com
NOTIFICATION_QUOTA_WARNING_THRESHOLD=90
NOTIFICATION_SUBSCRIPTION_EXPIRY_DAYS=7

# Background Jobs Configuration
BACKGROUND_JOBS_ENABLED=true
QUOTA_RESET_ENABLED=true
ANALYTICS_PROCESSING_ENABLED=true
SUBSCRIPTION_SYNC_ENABLED=true

# Feature Flags
FEATURE_CUSTOM_MODELS=true
FEATURE_BATCH_GENERATION=true
FEATURE_PRIORITY_PROCESSING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_API_ACCESS=true